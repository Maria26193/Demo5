<% include ./common/header.ejs %>
<div class="container">
    <div class="profile">
        <div class="profile-header">
            <h2>Profile Information</h2>
        </div>

        <div class="profile-details">
            <div class="profile-image">
                <img id="uploadIcon" src="images/uploads/dummy.png" alt="Profile Image">
                
            </div>
            <h3>@username</h3>
            
            <a href="#" class="edit-link">Edit</a>
            <div class="detail">
                <span class="label">Name:</span>
                <span class="value">John Doe</span>
            </div>
            <div class="detail">
                <span class="label">Email:</span>
                <span class="value">john@example.com</span>
            </div>
            <div class="detail">
                <span class="label">Contact Number:</span>
                <span class="value">123-456-7890</span>
            </div>
            <form  hidden id="uploadImgForm" method="post"  action="/fileupload" enctype="multipart/form-data ">
                <input type="file" name="profile_pic">
            </form>
            <!-- Add more profile details as needed -->
        </div>
    </div>
</div>
<script>
    document.querySelector("#uploadIcon").addEventListener("click",function(){
        document.querySelector("#uploadImgForm input").click(); //Change Input Location
    })
    document.querySelector("#uploadImgForm input").addEventListener("change", function(){
        document.querySelector("#uploadImgForm").submit();
    })
</script>
